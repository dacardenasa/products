<div class="row mt-5 justify-content-center">
  <div class="col-sm-8">
    <h1><strong>Products</strong></h1>
    <div class="text-right">
      <%= link_to "Nuevo Producto", new_product_path, class: "btn btn-primary mb-3" %>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Nombre</th>
          <th scope="col">Precio</th>
          <th scope="col">Categoria</th>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% if @products %>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.name %></td>
              <td>$<%= product.price %></td>
              <td>
                <% count = 0 %>
                <% product.categories.each do |category| %>
                  <% count += 1 %>
                  <%if count == product.categories.count %>
                    <%= category.name %>
                  <% else %>
                    <%= category.name %>,
                  <% end %>
                <% end %>
              </td>
              <td class="text-right">
                <%= link_to "Editar", edit_product_path(product) %>
                <%= link_to "Eliminar", product, method: :delete, data: {confirm: "Â¿Esta seguro de eliminar este producto?"} %>
              </td>
            </tr>
          <% end  %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>