<div class="row mt-5 justify-content-center">
  <div class="col-sm-6">
    <h1><strong><%= form_title %></strong></h1>
      <%= form_for @product do |f| %>
        <div class="form-group">
          <%= f.text_field :name, class: "form-control input-lg", placeholder: "Ingresa el nombre del producto" %>
        </div>
        <div class="form-group">
          <%= f.number_field :price, class: "form-control input-lg", placeholder: "Ingresa el precio del producto" %>
        </div>
          <% @categories.each do |category| %>
            <% if @product.categories.include?(category) %>
              <div class="form-check mb-2">
                <input class="form-check-input" name="category_id[]" type="checkbox" value="<%= category.id %>" id="defaultCheck<%= category.id%>" checked>
                <label class="form-check-label" for="defaultCheck<%= category.id%>"><%= category.name %></label>
              </div>
            <% else %>
              <div class="form-check mb-2">
                <input class="form-check-input" name="category_id[]" type="checkbox" value="<%= category.id %>" id="defaultCheck<%= category.id%>">
                <label class="form-check-label" for="defaultCheck<%= category.id%>"><%= category.name %></label>
              </div>
            <% end %>
          <% end %>
          <%= f.submit form_submit, class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
  </div>
</div>